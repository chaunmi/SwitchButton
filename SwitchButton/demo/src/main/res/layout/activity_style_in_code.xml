<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="#ffffff"
			  android:orientation="vertical"
			  android:paddingBottom="@dimen/activity_vertical_margin"
			  android:paddingLeft="@dimen/activity_horizontal_margin"
			  android:paddingRight="@dimen/activity_horizontal_margin"
			  android:paddingTop="@dimen/activity_vertical_margin">

	<TextView
		style="@style/StyleTitleText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/title_activity_style_in_code"/>

	<com.kyleduo.switchbutton.SwitchButton
		android:id="@+id/sb_code"
		style="@style/SwitchButtonStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:swThumbWidth="27dp"
		app:swThumbHeight="27dp"
		app:swThumbDrawable="@drawable/custom_thumb_drawable"
		app:swBackDrawable="@drawable/custom_back_drawable"
		/>

	<com.kyleduo.switchbutton.SwitchButton
		android:id="@+id/sb_code2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>

	<com.kyleduo.switchbutton.SwitchButton
		android:id="@+id/sb_code3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:enabled="false"
		android:checked="true"
		/>

	<androidx.appcompat.widget.SwitchCompat
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:layout_marginTop="15dp"
		android:thumb="@drawable/switch_button_thumb"
		app:track="@drawable/switch_button_track"
		/>


	<ListView
		android:id="@+id/opt_lv"
		android:paddingTop="8dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

</LinearLayout>